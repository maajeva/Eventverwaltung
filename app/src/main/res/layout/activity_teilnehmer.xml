<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TeilnehmerActivity">

    <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/TableTeilnehmerID" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Firmenname"
                    android:layout_width="178dp"
                    android:layout_height="match_parent" android:id="@+id/tvFirmenname"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:text="Firmenname"
                    android:ems="10"
                    android:id="@+id/lbFirmenname"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Vorname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tvVorname"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="Vorname"
                    android:ems="10"
                    android:id="@+id/lbVorname"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Nachname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tfNachname"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Nachname"
                    android:ems="10"
                    android:id="@+id/lbNachname"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Passwort"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/lbPasswort"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/tfPassword" android:text="Passwort" android:visibility="visible"
                    tools:visibility="visible" android:cursorVisible="true"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tvEmail"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:text="Email"
                    android:ems="10"
                    android:id="@+id/tfEmail"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <TextView
                    android:text="Adresse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tfAdresse"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textVisiblePassword|textPersonName"
                    android:text="Adresse"
                    android:ems="10"
                    android:id="@+id/lbAdresse"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Postleizahl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tvPostleizahl"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number|textPersonName"
                    android:text="Postleizahl"
                    android:ems="10"
                    android:id="@+id/tfPostZahl"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Telefonnummer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tvTelefonnummer"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:text="065012345689"
                    android:ems="10"
                    android:id="@+id/lbTelefonnummer"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tvUsername"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="Username"
                    android:ems="10"
                    android:id="@+id/lbUsername"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Save"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btnOkay"
            />
            <Button
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnCancel"
            />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>