<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".veranstalterAC">

    <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/TableTeilnehmerID" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Vorname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tvFirmenname"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="Vorname"
                    android:ems="10"
                    android:id="@+id/tfVorname"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Nachname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tfNachname"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="Nachname"
                    android:ems="10"
                    android:id="@+id/lbNachname"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tfBenutzername"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="Username"
                    android:ems="10"
                    android:id="@+id/lbUsername"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tfPassword"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/lbPassword"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tfEmail"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/lbEmail"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Telefonnummer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tfTelefonnummer"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/lbTelefonnummer"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <Button
                    android:text="Save"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/btnOkay"
            />
            <Button
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnCancel"
            />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>